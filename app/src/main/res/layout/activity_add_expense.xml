<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addExpenseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- 🔄 Вся категория: иконка + название + кнопка -->
    <LinearLayout
        android:id="@+id/selectedCategoryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 🟠 Иконка категории -->
        <ImageView
            android:id="@+id/selectedCategoryIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_icon_circle"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:contentDescription="Иконка категории" />

        <!-- 🟡 Название категории -->
        <TextView
            android:id="@+id/selectedCategoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Категория"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <!-- 🟢 Кнопка "Редактировать категорию" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать категорию"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/black"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_edit"
            app:iconPadding="8dp"
            app:iconTint="@color/black"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <!-- 📝 Поле "Название (необязательно)" -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTitleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Название (необязательно)"
        app:boxStrokeColor="@color/wood_brown"
        app:layout_constraintTop_toBottomOf="@id/selectedCategoryLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 💰 Поле "Сумма" -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Сумма"
        android:layout_marginTop="12dp"
        app:boxStrokeColor="@color/wood_brown"
        app:layout_constraintTop_toBottomOf="@id/inputTitleLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 📅 Поле "Дата" -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Дата"
        android:layout_marginTop="12dp"
        app:boxStrokeColor="@color/wood_brown"
        app:layout_constraintTop_toBottomOf="@id/amountLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 💾 Кнопка "Сохранить" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="СОХРАНИТЬ"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/wood_brown"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/dateLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>