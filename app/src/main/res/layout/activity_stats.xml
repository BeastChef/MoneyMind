        </RadioGroup>

        <!-- ðŸ”½ TabLayout Ð´Ð»Ñ Ð¿ÐµÑ€ÐµÐºÐ»ÑŽÑ‡ÐµÐ½Ð¸Ñ Ð¼ÐµÐ¶Ð´Ñƒ Ñ‚Ð¸Ð¿Ð°Ð¼Ð¸ Ð³Ñ€Ð°Ñ„Ð¸ÐºÐ¾Ð² -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/chartTabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:tabIndicatorColor="@color/md_theme_primary"
            app:tabSelectedTextColor="@color/md_theme_primary"
            app:tabTextColor="@android:color/darker_gray"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:layout_constraintTop_toBottomOf="@id/statsTypeGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ðŸ”½ ViewPager2 Ð´Ð»Ñ Ð¾Ñ‚Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ñ Ð³Ñ€Ð°Ñ„Ð¸ÐºÐ¾Ð² -->
        <androidx.viewpager2.widget.ViewPager2
