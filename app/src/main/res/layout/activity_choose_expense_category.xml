<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_expense_category_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    android:padding="0dp">

    <!-- Верхняя панель -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tv_choose_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/choose_category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?android:textColorPrimary"/>
    </LinearLayout>

    <!-- Таб -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/categoryTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/select_category_type"
        android:background="?android:colorBackground"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabSelectedTextColor="?android:textColorPrimary"
        app:tabTextColor="?android:textColorSecondary"
        app:tabIndicatorHeight="2dp"/>

    <!-- Сетка категорий -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_expense_categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="12dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/item_category"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3" />

    <!-- Кнопка -->
    <Button
        android:id="@+id/btn_add_custom_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/add_custom_category"
        android:textAllCaps="false"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp" />
</LinearLayout>