<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    android:gravity="top">

    <TextView
        android:id="@+id/navSettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="12dp" />

    <!-- 🧾 Статус аккаунта -->
    <TextView
        android:id="@+id/accountStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вы вошли как: ..."
        android:padding="8dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <!-- 🌍 Кнопка смены языка -->
    <Button
        android:id="@+id/btnChangeLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_language"
        android:drawableStart="@drawable/ic_language"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 🎨 Кнопка смены темы -->
    <Button
        android:id="@+id/btnChangeTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_theme"
        android:drawableStart="@drawable/ic_theme"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 🔐 Вход через Google -->
    <Button
        android:id="@+id/googleSignInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_with_google"
        android:drawableStart="@drawable/ic_google"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:padding="8dp"
        android:layout_marginBottom="12dp" />

    <!-- 🚪 Кнопка выхода -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout_button"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/expense_color"
        android:textColor="@android:color/white"
        android:padding="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="12dp" />

</LinearLayout>